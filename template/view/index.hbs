               <button>Submit</button>
             </form>
            <div class="response" >
                 <img src="/img/weather.png" id="weather-img"/>
                 <h2 id="message-1"> Location : </h2>
                 <h2 id="message-2">temperature :</h2>
                 <h2 id="message-3"> Forcast :</h2>
                <h2 id="message-4"> Humidity :</h2>
            </div>
            


          
        </div>
       
        {{>footer}}

        <script src="/js/script.js"></script>
    </body>    
</html>